@model Conso_API_Gami_ASP.DAL.Entities.MemberDetail

@{
    ViewData["Title"] = "Profil";
}

<h1>Profil</h1>

<div>
    <h4>MemberProfilView</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pseudo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pseudo)
        </dd>
    </dl>

    <hr />
    <h3>
        Jeux Favoris
    </h3>
    <p><a class="btn" asp-action="AddFav" asp-controller="Game">Ajouter un favori</a></p>
    <table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Description
            </th>
            <th>
                Min de joueurs
            </th>
            <th>
                Max de joueurs
            </th>
            <th>
                Age minimum
            </th>
            <th>
                Coopératif
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FavoriteList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbPlayerMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbPlayerMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCoop)
            </td>
           
        </tr>
}
    </tbody>
</table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
